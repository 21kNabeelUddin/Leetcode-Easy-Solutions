lclass Solution {
public:
    bool isPalindrome(int x) {
        if (x < 0 || (x % 10 == 0 && x != 0)) {
            return false;
        }

        int reverse = 0;
        int original = x;

        // Reverse the number with overflow protection
        while (x > 0) {
            int lastDigit = x % 10;

            // Check if reverse * 10 + lastDigit would overflow
            if (reverse > (INT_MAX - lastDigit) / 10) {
                return false; 
            }
            reverse = reverse * 10 + lastDigit;
            x /= 10;
        }

        return reverse == original;
    }
};
